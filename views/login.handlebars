<div class="container">
  <div class="row justify-content-center">
    <div class='col-md-6 mb-3'>
      <h2>Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label id="loginLabel" class="card-text" for="name-login">name:</label>
          <input class="form-input" type="text" id="name-login" />
        </div>
        <div class="form-group">
          <label id="loginLabel" class="card-text" for="password-login">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button id="signBtn" class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
    <div class="col-md-6">
      <h2>Signup</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label id="loginLabel" class="card-text" for="name-signup">name:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label id="loginLabel" class="card-text" for="password-signup">password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button id="signBtn" class="btn btn-primary" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="./js/login.js"></script>